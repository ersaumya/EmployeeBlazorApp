@page "/"
@inherits EmpListBase


<h3>Selected Employee Count-@SelectedEmployeeCount</h3>
<input type="checkbox" id="showFooter" @bind="ShowFooter"/>
<label for="showFooter">Show Footer</label>
@if (Employees == null)
{
    <div class="loader"></div>
}
else
{
    <div class="card-deck">

        @foreach (var employee in Employees)
        {
           <DisplayEmp Employee="employee" ShowFooter="ShowFooter" OnEmployeeSelection="EmployeeSelectionChanged"></DisplayEmp>
        }

    </div>
}




